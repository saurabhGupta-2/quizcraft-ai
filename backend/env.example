# --- Generic LLM Configuration ---
# Set your preferred LLM provider and model. Defaulting to OpenRouter.
# Supported providers in this codebase: google, groq, openrouter.
LLM_PROVIDER=openrouter
LLM_API_KEY=your_openrouter_api_key_here
# Default to OpenRouter's auto model (it routes to a suitable underlying model).
# You can replace this with any specific model ID from your OpenRouter dashboard.
LLM_MODEL=openrouter/auto
# --- End Generic LLM Configuration ---

# Other required settings (fill these out for your deployment)
SUPABASE_URL=
SUPABASE_KEY=
SUPABASE_SERVICE_KEY=
SECRET_KEY=
# QuizCraft AI - Environment Variables Template
# Copy this file to .env and fill in your actual values

# App Configuration
APP_NAME=QuizCraft AI
APP_VERSION=1.0.0
DEBUG=false
API_V1_PREFIX=/api/v1

# Security (REQUIRED)
SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Supabase Configuration (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# LLM Configuration (REQUIRED)
LLM_PROVIDER=groq
LLM_API_KEY=your-groq-api-key
LLM_MODEL=llama3-8b-8192

# LLM Settings
MAX_TOKENS=2048
TEMPERATURE=0.7

# Vector Store
VECTOR_DB_PATH=./data/chromadb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# File Upload
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=[".pdf", ".docx", ".txt", ".md"]

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

